Ia = imread('hall1.jpg');
Ib = imread('hall2.jpg');
Ia = single(rgb2gray(Ia)) ;
Ib = single(rgb2gray(Ib)) ;
[fa, da] = vl_sift(Ia) ;
[fb, db] = vl_sift(Ib) ;
[matches, scores] = vl_ubcmatch(da, db) ;


imgs = [imread('hall1.jpg');imread('hall2.jpg')];
height = size(imgs, 1)/2;
imshow(imgs);
hold on;
for i = 1 : size(matches,2)/10
    p1 = transpose( fa(1:2, matches(1,i)) );
    p2 = transpose( fb(1:2, matches(2,i)) ) + [height 0];
    %plot( [p1(2) p2(2)], [p1(1) p2(1)], 'b');
    
    plot(p1,'r.','MarkerSize',20);
    key
end